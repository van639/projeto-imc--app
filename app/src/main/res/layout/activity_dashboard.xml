<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cor_degrade"
        android:orientation="vertical"

        >


        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="50dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/seu_madruga"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_dash_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seu Madruga"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_dash_profissao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ator"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="25.7"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="1980"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tv_dash_idade"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="49"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_dash_peso"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="67"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_dash_altura"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="1.90"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>


            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="IMC"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="NCD"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Idade"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Peso"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Altura"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"/>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="84dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/image_pesar_agora"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_pesar"/>

                <TextView
                    android:id="@+id/text_pesar_agora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Pesar Agora"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginStart="100dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acompanhe seu peso"
                    android:layout_below="@+id/text_pesar_agora"
                    android:layout_toEndOf="@+id/image_pesar_agora"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="12dp"
                    />



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_ver_historico"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_grafico"/>

                <TextView
                    android:id="@+id/titulo_ver_historico"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="Ver histÃ³rico"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/image_ver_historico"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Reveja suas conquistas"
                    android:layout_below="@+id/titulo_ver_historico"
                    android:layout_toEndOf="@+id/image_ver_historico"
                    android:layout_marginTop="12dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>
    
</LinearLayout>